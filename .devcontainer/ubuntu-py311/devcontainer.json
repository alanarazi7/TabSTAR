{
  "name": "TabSTAR Ubuntu Python 3.11",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "postCreateCommand": "pip install -e . && pip install -r requirements.txt && python -m pytest test/test_baselines.py -v",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "forwardPorts": [8888, 8080],
  "remoteUser": "vscode"
}